<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WatchLaterActivity"
    android:background="@color/colorPrimaryDakrer">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/watchLaterActivity_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="50dp"/>

    <LinearLayout
        android:id="@+id/watchLaterActivity_emptyListAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_mood_bad_black_24dp"
            android:layout_gravity="center_horizontal"
            android:tint="@android:color/tertiary_text_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La lista Ã¨ vuota..."
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tocca e tieni premuto un film per aggiungerlo ai film da vedere!"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="8dp"/>

    </LinearLayout>

</RelativeLayout>