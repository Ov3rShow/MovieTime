<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    android:layout_margin="8dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cell_cardView">

    <ImageView
        android:id="@+id/cell_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/cell_watchLater"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_margin="8dp"
        android:src="@drawable/ic_watch_later_black_24dp"
        android:tint="@color/colorAccent"
        android:background="@drawable/circle_shape"
        android:padding="2dp"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/veryDarkGreyALittleTransparent">

        <TextView
            android:id="@+id/cell_textView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>