<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="searchBarStyle" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/colorPrimary</item>
        <item name="mt_dividerColor">@color/colorPrimary</item>

        <item name="mt_navIconTint">@android:color/white</item>
        <item name="mt_searchIconTint">@android:color/white</item>
        <item name="mt_clearIconTint">@android:color/white</item>
        <item name="mt_menuIconTint">@android:color/white</item>
        <item name="mt_backIconTint">@android:color/white</item>

        <item name="mt_textCursorTint">@android:color/white</item>
        <item name="mt_textColor">@android:color/white</item>
        <item name="mt_hintColor">@color/hint</item>
        <item name="mt_placeholderColor">@android:color/white</item>
        <item name="mt_highlightedTextColor">@android:color/white</item>
    </style>

</resources>
